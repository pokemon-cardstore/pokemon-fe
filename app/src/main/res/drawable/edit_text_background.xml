<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background when focused -->
            <stroke android:width="2dp" android:color="#FF9800" /> <!-- Orange border when focused -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Default white background -->
            <stroke android:width="2dp" android:color="#CCCCCC" /> <!-- Light gray border -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>